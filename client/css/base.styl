html
body
	width 100%
	height 100%

body
	font 14px/1.6 "Hiragino Sans GB", "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif
    -webkit-font-smoothing antialiased

a
	&:hover
		color #000
		text-decoration none

.nmg
	margin 0

.mgb-xs
	margin-bottom 10px

.mgb-sm
	margin-bottom 15px

.pd10
	padding 10px

.fit-width
	width 100%

.box
	overflow hidden
	border-radius 4px
	font-size 13px
	& h5
		margin 0
		padding 0
		& a
			display block
			padding 6px 12px
			// border-bottom 1px solid #e67e22
			background-color #95a5a6
			background-image linear-gradient(hsla(0, 0%, 70%, 1), hsla(0, 0%, 100%, 0))
			color #ecf0f1
	& ul
		list-style none
		margin 0
		padding 10px
		border-radius 0 0 4px 4px

.text-xs
	font-size 12px

.text-sm
	font-size 13px

.row-xs
	margin-left -5px
	margin-right @margin-left

.col-xs
	padding-left 5px
	padding-right 5px

.bordered
	border 1px solid #ecf0f1
