body
	font 14px/1.4 "Hiragino Sans GB", "Lucida Grande", "Lucida Sans Unicode", Helvetica, Arial, Verdana, sans-serif
    -webkit-font-smoothing antialiased

.nmg
	margin 0

.mgb-sm
	margin-bottom 15px

.fit-width
	width 100%

.box
	overflow hidden
	border-radius 4px
	& h5
		margin 0
		padding 0
		& a
			display block
			padding 6px 12px
			border-top 3px solid #e67e22
			background-color #f8f8f8
	& ul
		list-style none
		margin 0
		padding 10px
		border-radius 0 0 4px 4px

.text-xs
	font-size 12px

.text-sm
	font-size 13px

.row-xs
	margin-left -5px
	margin-right @margin-left

.col-xs
	padding-left 5px
	padding-right 5px

.bordered
	border 1px solid #efefef
