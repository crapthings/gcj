// box

.box
	overflow hidden
	border-radius 4px
	font-size 13px

.box-header
	background-color whitesmoke
	background-image linear-gradient(hsla(0, 0%, 80%, .4), hsla(0, 0%, 100%, 0))
	color whitesmoke
	font-size 12px
	& a
		display inline-block
		padding 6px 12px
		background-color slategrey
		color @color
		&:hover
			color white

.box-figure
	height 80px
	background-position center center
	background-size cover

.box-body
	& ul
		list-style none
		margin 0
		padding 0
