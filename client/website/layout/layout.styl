@import 'nib'

.website
	color #999
	& a
		color #333
	& label
		font-size 12px
		font-weight normal

.website .container
	// max-width 960px

.website-topnav-wrapper
	position relative
	margin-bottom 15px
	height 180px
	line-height @height
	background url('/headerbg.jpg')	no-repeat center center
	background-size cover
	& .website-topnav
		position absolute
		bottom 0
		left 0
		padding-top 12px
		width 100%
		background-color rgba(0, 0, 0, .3)
	& .nav-tabs
		border-bottom 0
	& .nav-tabs > li
		margin-bottom 0
	& .nav-tabs > li.active > a
		color #333
		&:hover
			background-color white
			color #333
	& .nav-tabs > li > a
		padding 10px 20px
		border 0
		border-radius 4px 4px 0 0
		color white
		&:hover
			border 0
			border-radius 4px 4px 0 0
			background-color transparent
			color white
			-webkit-transform scale(1.3, 1.3)
